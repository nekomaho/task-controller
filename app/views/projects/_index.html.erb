<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-4"><h3><%=t "project.index.project_manager" %></h3></div>
      <div class="col-md-4 col-md-offset-4" >
        <%= link_to  t("project.index.new_project"), {:controller => :projects, :action => :new}, :class => "btn btn-primary btn-sm active pull-right", remote: true %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-hover table-responsive table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th><%= t "project.index.project_name" %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.id, controller: "projects",action: "show", id: project, remote: true  =%></td>
          <td><%= project.name =%></td>
          <td><%= link_to t("default.edit"), controller: "projects",action: "edit", id: project, remote: true  =%>
          <%= link_to t("default.delete"), project, method: :delete, data: { confirm: t("default.delete_confirm")} =%>
            <%= link_to t("project.index.task_list"), [project,:tasks] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
